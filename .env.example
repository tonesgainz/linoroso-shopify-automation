# ===================================
# LINOROSO SHOPIFY AUTOMATION CONFIG
# ===================================

# ----------------
# API Keys
# ----------------

# Anthropic Claude API Key (Required)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (Optional - fallback for certain tasks)
OPENAI_API_KEY=your_openai_api_key_here

# ----------------
# Shopify Store
# ----------------

# Your Shopify store URL (e.g., linoroso.myshopify.com)
SHOPIFY_STORE_URL=your_store.myshopify.com

# Shopify Admin API Access Token
# Get from: Settings → Apps and sales channels → Develop apps
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# Shopify API Version (default: 2024-01)
SHOPIFY_API_VERSION=2024-01

# ----------------
# Database (MySQL)
# ----------------

DB_HOST=localhost
DB_PORT=3306
DB_NAME=linoroso_automation
DB_USER=root
DB_PASSWORD=your_database_password

# ----------------
# SEO & Analytics
# ----------------

# SerpAPI Key (for keyword research)
# Get from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# Google Analytics Property ID (Optional)
GA_PROPERTY_ID=your_ga_property_id

# ----------------
# Social Media APIs
# ----------------

# Twitter/X API Credentials (Optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Instagram (Optional)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# TikTok (Optional)
TIKTOK_SESSION_ID=your_tiktok_session_id

# ----------------
# Email Marketing
# ----------------

# Klaviyo API Key (Optional)
KLAVIYO_API_KEY=your_klaviyo_api_key

# ----------------
# Automation Settings
# ----------------

# Content generation frequency (daily, weekly)
CONTENT_FREQUENCY=daily

# Number of blog posts to generate per run
POSTS_PER_RUN=2

# Content generation time (24-hour format, PST)
GENERATION_TIME=02:00

# API Rate Limits (requests per minute)
API_RATE_LIMIT=50

# ----------------
# Application Settings
# ----------------

# Environment (development, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable features
ENABLE_AUTO_PUBLISH=false
ENABLE_SOCIAL_POSTING=false
ENABLE_EMAIL_NOTIFICATIONS=false

# ----------------
# Redis (for Celery)
# ----------------

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ----------------
# Monitoring
# ----------------

# Sentry DSN (Optional - for error tracking)
SENTRY_DSN=your_sentry_dsn_here
