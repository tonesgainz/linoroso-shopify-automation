# ===================================
# LINOROSO SHOPIFY AUTOMATION CONFIG
# ===================================

# ----------------
# Application Settings
# ----------------

# Environment: development, staging, or production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------
# Claude AI API
# ----------------

# Anthropic Claude API Key (Required for content generation)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model version to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Maximum tokens per API request (1-200000)
MAX_TOKENS=4000

# ----------------
# Shopify Store
# ----------------

# Your Shopify store URL (e.g., linoroso.myshopify.com)
SHOPIFY_STORE_URL=linoroso.myshopify.com

# Shopify API Key
SHOPIFY_API_KEY=your_shopify_api_key_here

# Shopify API Secret
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# Shopify Admin API Access Token
# Get from: Settings → Apps and sales channels → Develop apps
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# Shopify API Version (default: 2024-01)
SHOPIFY_API_VERSION=2024-01

# ----------------
# Database (MySQL)
# ----------------

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=linoroso_automation
MYSQL_USER=root
MYSQL_PASSWORD=your_database_password

# ----------------
# Brand Configuration
# ----------------

# Brand name
BRAND_NAME=Linoroso

# Brand tagline
BRAND_TAGLINE=Simplicity, Elegance, Functionality

# Brand voice characteristics
BRAND_VOICE=professional, warm, helpful, family-oriented

# Target audience description
TARGET_AUDIENCE=quality-conscious home cooks, culinary enthusiasts

# Main product categories (comma-separated)
MAIN_CATEGORIES=kitchen knives,kitchen shears,knife sets,storage solutions

# ----------------
# Content Generation
# ----------------

# Output directory for generated content
CONTENT_OUTPUT_PATH=./data/generated_content

# Blog post generation frequency
BLOG_POST_FREQUENCY=daily

# Minimum word count for blog posts
MIN_WORD_COUNT=800

# Maximum word count for blog posts
MAX_WORD_COUNT=1500

# Social media posts to generate per day
SOCIAL_POSTS_PER_DAY=3

# ----------------
# SEO & Analytics
# ----------------

# SerpAPI Key (for keyword research)
# Get from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# Google Analytics Property ID
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id

# Path to Google service account credentials JSON
GOOGLE_CREDENTIALS_PATH=./config/google-credentials.json

# ----------------
# Social Media APIs
# ----------------

# Instagram (Optional)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# TikTok (Optional)
TIKTOK_SESSION_ID=your_tiktok_session_id

# Pinterest (Optional)
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token

# ----------------
# Email Marketing
# ----------------

# Klaviyo API Key (Optional)
KLAVIYO_API_KEY=your_klaviyo_api_key

# ----------------
# Influencer Program
# ----------------

# Maximum number of influencers to contact per campaign
INFLUENCER_OUTREACH_LIMIT=50

# Minimum follower count for influencers
MIN_FOLLOWER_COUNT=10000

# Minimum engagement rate (percentage)
MIN_ENGAGEMENT_RATE=3.0

# Commission tiers (percentage)
COMMISSION_BASIC=10
COMMISSION_INTERMEDIATE=15
COMMISSION_ADVANCED=20

# ----------------
# Monitoring & Alerts
# ----------------

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Slack webhook URL (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Alert email address
ALERT_EMAIL=tony@linoroso.com

# ----------------
# Redis (for Celery - Optional)
# ----------------

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===================================
# NOTES
# ===================================
#
# Required variables for basic functionality:
# - ANTHROPIC_API_KEY
# - SHOPIFY_ACCESS_TOKEN
# - SHOPIFY_API_KEY
# - MYSQL_PASSWORD
#
# Optional variables can be left with default values
# or omitted entirely if features are not needed.
